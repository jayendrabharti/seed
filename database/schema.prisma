generator client {
  provider = "prisma-client"
  output   = "generated"
}

datasource db {
  provider = "postgresql"
}

// -------------------------------------
// USER MANAGEMENT
// -------------------------------------

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  phone     String?  @unique
  name      String?
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens   RefreshToken[]
  businessesOwned Business[]           @relation("BusinessOwner")
  memberships     BusinessMembership[]

  @@map("users")
}

model RefreshToken {
  id         String   @id @default(cuid())
  userId     String
  token      String   @unique
  expiresAt  DateTime
  clientInfo Json?
  isRevoked  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
  @@map("refresh_tokens")
}

model otp {
  id         String    @id @default(cuid())
  otp        String
  email      String?
  phone      String?
  attempts   Int       @default(0)
  expiresAt  DateTime
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("otps")
}

// -----------------------------------------------------
// BUSINESS MANAGEMENT
// -----------------------------------------------------

model Business {
  id          String   @id @default(cuid())
  name        String
  ownerId     String
  description String?
  email       String?
  phone       String?
  logoImage   String?
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner   User                 @relation("BusinessOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members BusinessMembership[]

  @@unique([ownerId, name])
  @@map("businesses")
}

model BusinessMembership {
  id         String                 @id @default(cuid())
  userId     String
  businessId String
  title      String?
  role       BusinessMembershipType @default(STAFF)
  createdAt  DateTime               @default(now())
  updatedAt  DateTime               @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([userId, businessId])
  @@map("business_memberships")
}

enum BusinessMembershipType {
  OWNER
  STAFF
}
